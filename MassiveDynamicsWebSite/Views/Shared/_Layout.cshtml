<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Graphs4Social", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    <li>@Html.ActionLink("Admin", "Index", "Account")</li>
                    <li>@Html.ActionLink("Jogo", "Index", "Jogo")</li>
                    <li>@Html.ActionLink("EstadoRelacao", "Index", "EstadoRelacao")</li>
                    <li>@Html.ActionLink("Relacao", "Index", "Relacao")</li>
                    <li>@Html.ActionLink("Introducao", "Index", "Introducao")</li>
                    <li>@Html.ActionLink("Humor", "Index", "Humor")</li>
                    <li>@Html.ActionLink("Tag", "Index", "Tag")</li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Serviços <b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li>
                                <a href="#">Download Game</a>
                            </li>
                            <li>
                                <a href="#">Leaderboard</a>
                            </li>
                            <li>
                                <a href="#">Dimensão da Rede</a>
                            </li>
                            <li>
                                <a href="#">Tag cloud de todos os utilizadores</a>
                            </li>
                            <li>
                                <a href="#">Tag cloud de todas as relações</a>
                            </li>
                            <li>
                                <a href="#">Sugestões de amigos</a>
                            </li>
                            <li>
                                <a href="#">Tamanho da sua rede</a>
                            </li>
                            <li>
                                <a href="#">Tag cloud dos seus utilizadores</a>
                            </li>
                            <li>
                                <a href="#">Tag cloud das suas relações</a>
                            </li>

                        </ul>
                    </li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        <hr />
        @RenderBody()
        
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
